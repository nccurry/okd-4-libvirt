[Unit]
Description=HAProxy
After=network-online.target
Wants=network-online.target

[Service]
Restart=on-failure
ExecStartPre=/usr/bin/rm -f /%t/%n-pid /%t/%n-cid
ExecStart=/usr/bin/podman run --conmon-pidfile /%t/%n-pid --cidfile /%t/%n-cid -d -p 8080:80 -v /home/core/haproxy/haproxy.cfg:/usr/local/etc/haproxy/haproxy.cfg:Z haproxy:latest
ExecStop=/usr/bin/podman rm -f --cidfile %t/%n-cid
KillMode=none
Type=forking
PIDFile=/%t/%n-pid

[Install]
WantedBy=multi-user.target
